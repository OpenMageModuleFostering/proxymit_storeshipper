<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
	<default>
		<reference name="root">
			<action method="setTemplate">
				<template>page/1column.phtml</template>
			</action>
		</reference>
		<reference name="head">
			<action method="addJs">
				<name>stores/canvasloader/canvasloader.js</name>
				<params />
			</action>
		</reference>
		<reference name="root">
			<reference name="top.links">
				<action method="addLink" translate="label title">
					<label>Our Stores</label>
					<url>stores</url>
					<title>Our Stores</title>
					<prepare>true</prepare>
					<position>1</position>
					<liParams />
					<beforeText></beforeText>
					<afterText></afterText>
				</action>
			</reference>
		</reference>
	</default>
	<routeurfrontend_index_index>
		<reference name="content">
			<block type="storeshipper/ourstores" name="ourstores"
				template="storeshipper/ourstores.phtml" />
			</reference>
		</routeurfrontend_index_index>
		<sales_order_print>
			<reference name="sales.order.print">
				<action method="setTemplate">
					<template>storeshipper/sales/order/print.phtml</template>
				</action>
			</reference>
		</sales_order_print>
		<sales_guest_print>
			<reference name="sales.order.print">
				<action method="setTemplate">
					<template>storeshipper/sales/order/print.phtml</template>
				</action>
			</reference>
		</sales_guest_print>
		<sales_order_printcreditmemo>
			<reference name="sales.order.print.creditmemo">
				<action method="setTemplate">
					<template>storeshipper/sales/order/print.phtml</template>
				</action>
			</reference>
		</sales_order_printcreditmemo>
		<sales_guest_printcreditmemo>
			<reference name="sales.order.print.creditmemo">
				<action method="setTemplate">
					<template>storeshipper/sales/order/print.phtml</template>
				</action>
			</reference>
		</sales_guest_printcreditmemo>
	</layout>